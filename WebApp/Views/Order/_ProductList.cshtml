@model IEnumerable<ViewModel.ProductViewModel>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Initial) - @Html.DisplayNameFor(model => model.Name)
                <br /> @Html.DisplayNameFor(model => model.Description)
            </th>
